<style type="text/css">
    .main {
        width:750px;
        float: left;
        margin-left: 30px;
    }
</style>


<h3>検査一覧</h3>
<div class="main">
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th align="center">項目</th>
      <th align="center">検査した日</th>
      <th align="center">スコア</th>
    </tr>
  </thead>

  <tbody>
    <% @screenings.each do |screening| %>
      <tr>
        <td align="center"><%= screening.title %></td>
        <td align="center"><%= screening.created_at.strftime("%Y年%m月%d日 %H時%M分") %></td>
        <td align="center"><%= screening.score %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
