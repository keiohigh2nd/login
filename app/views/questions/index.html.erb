<p id="notice"><%= notice %></p>

<h1>Questions</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Question date</th>
      <th>Life</th>
      <th>Past</th>
      <th>Family</th>
      <th>Alle</th>
      <th>Pharm</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.questions.each do |question| %>
      <tr>
        <td><%= question.user_id %></td>
        <td><%= question.question_date %></td>
        <td><%= question.life %></td>
        <td><%= question.past %></td>
        <td><%= question.family %></td>
        <td><%= question.alle %></td>
        <td><%= question.pharm %></td>
        <td><%= link_to 'Edit',  edit_user_question_path %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

