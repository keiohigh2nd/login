<p id="notice"><%= notice %></p>

<h1>Questions</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Question date</th>
      <th>Life</th>
      <th>Past</th>
      <th>Family</th>
      <th>Alle</th>
      <th>Pharm</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.questions.each do |question| %>
      <tr>
        <td><%= question.user_id %></td>
        <td><%= question.question_date %></td>
        <td><%= question.life %></td>
        <td><%= question.past %></td>
        <td><%= question.family %></td>
        <td><%= question.alle %></td>
        <td><%= question.pharm %></td>
        <% @question_user = question.user_id
	   @question_id = question.id
           @url = "/users/#{question.user_id}/questions/#{question.id}/edit"  %>
        <td><%= link_to 'Edit',  "#{@url}" %></td> %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

