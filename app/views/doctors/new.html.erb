<%= stylesheet_link_tag "doctor_signup", :media => "all" %>
<h1>アカウント作成</h1>

<div class="register">
<%= form_for(@doctor) do |f| %>
      <%= f.label :name, '名前' %>
      <%= f.text_field :name  ,class:"form-control",placeholder:"お名前" %>

      <%= f.label :email, 'メールアドレス' %>
      <%= f.text_field :email ,class:"form-control",placeholder:"メールアドレス" %>

      <%= f.label :password, 'パスワード' %>
      <%= f.password_field :password ,class:"form-control",placeholder:"ログインのためのパスワード" %>

      <%= f.label :password_confirmation, '確認' %>
      <%= f.password_field :password_confirmation ,class:"form-control",placeholder:"もう一度同じパスワードを" %>


      <%= f.label :adress, '所在地' %>
      <%= f.text_field :adress ,class:"form-control",placeholder:"貴院の所在地" %>

      <%= f.label :speciality, '専門' %>
      <%= f.text_field :speciality ,class:"form-control",placeholder:"ご専門や、貴院の特徴" %>

      <%= f.submit 'アカウントを作成する' %>
<% end %>
</div>
