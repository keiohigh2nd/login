<style type="text/css">
    .form {
        width:800px;
        float: left;
        margin-left: 30px;
    }
</style>

<div class="form">
<h3>医師一覧</h3>
<%= form_tag doctors_path, :method => 'get' do %> 
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag :Search, :name => nil, class: "btn btn-default btn-md" %>
  </p>
<% end %>

<span class="badge">Open</span>は受け入れ可能ということです</br>

<ul class="list-group">
  <% @doctors.each do |doctor| %>
  <li class="list-group-item"><%= link_to doctor.name, doctor %>
  <% if doctor.openflag == 1 %>
    <span class="badge">Open</span>
  <% end %>
  </li>
  <% end %>
</ul>

</div>
