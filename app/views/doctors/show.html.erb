<%= stylesheet_link_tag "doctor_home", :media => "all" %>

<div class="main">
    <h2>名前: <%= @doctor.name %></h2>
    <h2>場所: <%= @doctor.adress %></h2>
    <h2>専門: <%= @doctor.speciality %></h2>
    <h2>過去に受け持った患者数: <%= @doctor.users.length %></h2> 
    <% if signed_in_doctor? %>
      <% if current_doctor=(@doctor) %>
      <p><%= link_to '編集', edit_doctor_path, class: "btn btn-primary btn-md" %></p>
      <% end %>
    <% end %>
</div>

<% if not signed_in_doctor? %>
  <%= form_tag({controller: "users", action: "favorite" }, {method: "get"}) do %>
    <%= submit_tag "お気に入りに登録する", :class=> "btn btn-primary" %>
  <% end %>
<% end %>

<% if signed_in_doctor? %>
  <div class="open_tag">
    <% if @doctor.openflag == 0 %>
      <h4>あなたは現在、患者を受け入れていません</h4>
      <%= form_tag({controller: "doctors", action: "open" }, {method: "get"}) do %>
        <div class="f_button">
        <%= submit_tag "Open", :class=> "btn btn-default" %>
        </div>
      <% end %>
    <% else %>
　　　<h4>現在、患者を受け入れています</h4>
      <%= form_tag({controller: "doctors", action: "close" }, {method: "get"}) do %>
        <div class="f_button">
        <%= submit_tag "Close" , :class=> "btn btn-success" %>
        </div>
      <% end %>
    <% end %>
  </div>



  <div class="patient">
  <% if current_doctor=(@doctor) %>
    <h2>担当患者</h2>
    <% if @doctor.users.length == 0 %>
      現在、担当患者はおりません
    <% end %>
    <% @doctor.users.each do |user| %>
      <%= link_to user.id, { :controller => :users, :action => :show, :id => user.id } %>
    <% end %>
  <% end %>
  </div>
<% end %>
